<%if (error && String(error).trim() !== "") { %>

  <div class="alert alert-danger alert-dismissible fade show">
    <%= error %>
    <button
      type="button"
      class="close"
      data-bs-dismiss="alert"
      aria-label="close"
    >
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>

<%if(errors != null){%> <% errors.forEach(e => { %>
<div class="alert alert-danger alert-dismissible fade show">
  <%= e.text %>
  <button
    type="button"
    class="close"
    data-bs-dismiss="alert"
    aria-label="close"
  >
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% }) %> <%}%>

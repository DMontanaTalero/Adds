<%if (success_msg && String(success_msg).trim() !== "") { %>

<div class="alert alert-success alert-dismissible fade show">
  <%= success_msg %>
  <button
    type="button"
    class="close"
    data-bs-dismiss="alert"
    aria-label="close"
  >
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>
